<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:id="@+id/date"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Закуска:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/breakfast_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Calories"
            />
        <TextView
            android:id="@+id/breakfast_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обяд:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lunch_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Calories"
            />
        <TextView
            android:id="@+id/lunch_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вечеря:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dinner_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Calories"
            />
        <TextView
            android:id="@+id/dinner_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Междинни хранения:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/extra_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Calories"
            />
        <TextView
            android:id="@+id/extra_meal_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Общо Калории за деня:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/total_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginLeft="20dp"
            android:onClick="onCalculate"/>

        <Button
            android:id="@+id/change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Date"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:background="@color/purple_500"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="backPressed"/>
    </LinearLayout>

</LinearLayout>